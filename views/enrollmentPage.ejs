<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Enrollments</title>
    <link rel="stylesheet" href="/enrollmentPage.css">

</head>
<body>

  <div class="container">
      <header>
        <h1>Course Management System</h1>
        <a href="/home" class="back-to-home">Back to Home</a></header>
</div>

  <div class="enrollment">
  <% enrollments.forEach(enroll => { %>
    <h3>User: <%= enroll.username %></h3>
    <h3>Course: <%= enroll.course %></h3>
    <form action="/teacher/enrollment/edit/<%=enroll.id%>">
      <button type="submit">Edit</button>
    </form>
<% }) %>
  </div>

        <!-- footer -->
        <div id="footer-container">
        <footer>
        <span>@2025</span>
        <span style="color:orange;">| Course Management System |</span>
        <span>All Rights Reserved</span>
  </footer>
</div>

</body>
</html>